{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },

    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "tiktok_redirect_rules",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },

    "permissions": [
        "declarativeNetRequestWithHostAccess",
        "webNavigation",
        "tabs"
    ],

    "host_permissions": [
        "*://*.tiktok.com/*",
        "*://*.instagram.com/*",
        "*://*.instagr.am/*",
        "*://*.youtube.com/*",
        "*://*.youtu.be/*",
        "*://*.facebook.com/*",
        "*://*.fb.me/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.t.co/*",
        "*://*.linkedin.com/*",
        "*://*.lnkd.in/*",
        "*://*.reddit.com/*",
        "*://*.redd.it/*"
    ],

    "content_scripts": [
        {
            "matches": [
                "*://*.tiktok.com/*",
                "*://*.instagram.com/*",
                "*://*.instagr.am/*",
                "*://*.youtube.com/*",
                "*://*.youtu.be/*",
                "*://*.facebook.com/*",
                "*://*.fb.me/*",
                "*://*.twitter.com/*",
                "*://*.x.com/*",
                "*://*.t.co/*",
                "*://*.linkedin.com/*",
                "*://*.lnkd.in/*",
                "*://*.reddit.com/*",
                "*://*.redd.it/*"
            ],
            "js": ["constants.js", "content.js"],
            "run_at": "document_start"
        }
    ],

    "background": {
        "service_worker": "background.js",
        "type": "module"
    },

    "action": {
        "default_icon": "images/icon-48.png",
        "default_title": "TokCleaner - Remove Tracking Parameters",
        "default_popup": "popup.html"
    }
}
